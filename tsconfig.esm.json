{
    "compilerOptions": {
      "target": "ES2017",
      "module": "es2020",
      "declaration": true,
      "outDir": "dist/esm",
      "sourceMap": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "strict": true,
      "jsx": "preserve",
      "importHelpers": true,
      "moduleResolution": "node",
      "esModuleInterop": false,
      "allowSyntheticDefaultImports": false,
      "strictNullChecks": false,
      "baseUrl": ".",
      "paths": {
        "@src/*": ["src/*"]
      },
      "lib": ["esnext"]
    },
    "include": ["src/**/*.ts", "tests/**/*.ts"],
    "exclude": ["node_modules"]
  }
  